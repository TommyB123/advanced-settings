{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build only",
            "type": "shell",
            "command": "sampctl build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": "$sampctl"
        },
        {
            "label": "build watcher",
            "type": "shell",
            "command": "sampctl build --watch",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": "$sampctl"
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "sampctl run",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": "$sampctl"
        },
        {
            "label": "run tests watcher",
            "type": "shell",
            "command": "sampctl run --watch",
            "group": "test",
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": "$sampctl"
        }
    ]
}
